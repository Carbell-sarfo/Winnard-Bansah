<style lang="scss">

// //////////////////////// Section Coming Soon ======================
.section-coming-soon {
    background-image: url(/assets/coming-bg.png);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    height: 100vh;
    min-height: 100vh;
    display: flex;

    .coming-soon-container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
    }
}
// End of section coming soon




/////////////////// Section Hero ==================================
.section-hero {
    background: linear-gradient( to bottom, #002035, #111111);
    color: rgb(var(--clr-win-white));
}
// End of Section-hero





// ===================== Section -Services ===========================
.section-hero__services {
    background-color: rgb(var(--clr-gray));

    .service {
        background-color: rgb(var(--clr-win-black));
        padding: 2rem;
        border-radius: 1rem;
        text-align: left;
        margin-inline: .5rem;

        img {
            width: 80px;
            margin-bottom: 1rem;
        }
        h2 {
            font-size: 1.8rem;
            font-weight: bold;
            line-height: 1;
            margin-bottom: .5rem;;
        }

        .dash {
            width: 40px;
            height: 3px;
            border-radius: 3px;
            background-color: rgb(var(--clr-win-white));
        }
    }
}
// End of section-services




// =========================== Section Testimonial ==============================
.section-testimonial {

    .testimonial {
        display: flex !important;
    }
}















