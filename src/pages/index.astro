---
import MainLayout from '../layouts/MainLayout.astro';

---





<MainLayout title="Winnard Bansah ">
	<section class="section-coming-soon">
        <div class="container wrapper">
            <div class="coming-soon-container">
                <h1 class="mb-4 text-5xl font-extrabold text-gray-100 dark:text-white md:text-5xl lg:text-6xl"><span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Coming</span> Soon.</h1>
                <p class="text-lg font-normal text-gray-100 lg:text-xl my-8">Our Engineers are at work to make your experience an amazing one.</p>
                <a href="https://mail.google.com/mail/u/1/#inbox?compose=CllgCHrfTTWxMRGcwmGxpXCmWqHGCxrDFvxzLKFhjLgMkgfglwDfNkmXXGJRCJdWWDNWnrktLdB" class="btn btn-neutral">Send a Message</a>
            </div>
        </div>
    </section>

</MainLayout>

<style lang="scss">

.section-coming-soon {
    background-image: url(/assets/coming-bg.png);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    height: 100vh;
    min-height: 100vh;
    display: flex;

    .coming-soon-container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
    }
}
</style>
