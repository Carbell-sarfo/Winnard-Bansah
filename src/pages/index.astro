// //////////////////////// Section Coming Soon ======================
.section-coming-soon {
    background-image: url(/assets/coming-bg.png);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    height: 100vh;
    min-height: 100vh;
    display: flex;

    .coming-soon-container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
    }
}
// End of section coming soon




/////////////////// Section Hero ==================================
.section-hero {
    // background: linear-gradient( to bottom, #002035, #111111);
    background-color: rgb(var(--clr-win-black));
    color: rgb(var(--clr-win-white));
}
// End of Section-hero





// ===================== Section -Services ===========================
.section-hero__services {
    background-color: rgb(var(--clr-gray));
    border-bottom: 1px solid #dbdbdb;
    padding-bottom: 12rem;

    .service {
        background-color: rgb(var(--clr-win-black));
        height: 100%;
        width: 100%;
        padding: 2rem;
        border-radius: 1rem;
        text-align: left;
        margin-inline: .5rem;

        img {
            width: 80px;
            margin-bottom: 1rem;
        }
        h2 {
            font-size: 1.8rem;
            font-weight: bold;
            line-height: 1;
            margin-bottom: .5rem;;
        }

        .dash {
            width: 40px;
            height: 3px;
            border-radius: 3px;
            background-color: rgb(var(--clr-win-white));
        }
    }
}
// End of section-services




// =========================== Section Testimonial ==============================
.section-testimonials {
    padding-top: 10rem;

    .testimonial {
        display: grid !important;
        width: 100%;
        padding: 1rem;
        margin-inline: 1rem;

        img {
            // max-height: 200px;
            // width: auto;
        }

        .company {
            text-decoration: uppercase;
            color: rgb(82, 82, 82);
        }

        p {
            font-size: 2rem;
            line-height: 1.6;
        }

        h3 {
            color: rgb(82, 82, 82);
            font-weight: 400;
        }
        .heading-secondary {
            margin-bottom: .5rem;
        }

    }
}



// ======================= Section Certificates =====================
.section-certificates {
    padding: 10rem 0;
    background-color: rgb(var(--clr-win-black));

    .cert-container {
        margin-top: 4rem;
    }

    .cert {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 1rem;
        padding: 2rem 1rem;
        align-items: center;
        border-block: 1px solid darkgray;
        background-color: rgb(var(--clr-win-black));

        &:hover {
            background-color: #005d9b34;
        }

        // make the next section light and then the next section dark
        &.light {
            background-color: rgb(var(--clr-win-gray));

            &:hover {
            background-color: #005d9b34;
        }
        }

        // date
        .date {
            color: rgb(var(--clr-win-gray-light));
            font-size: .8rem;
            margin-top: .5rem;
        }

        // Orginsation
        h3 {
            justify-self: center;
        }

        // Call to action links to see certificates
        .cert-cta {
            color: rgb(var(--clr-win-blue));

            &:hover {
                color: rgb(var(--clr-win-white));
            }
        }
    }
}
// End of certificates













