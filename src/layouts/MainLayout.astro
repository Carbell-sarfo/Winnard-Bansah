---
import Footer from "../components/Footer.astro"
import Nav from "../components/Nav.astro"
import "../styles/styles.css"
// import "../js/main.js"
interface Props {
	title: string;
	description?: string;
	image?: string
}


const { title, 
description="I thrive in managing diverse priorities with an organized approach and a positive mindset. My expertise as a Business Consultant encompasses strategic planning, project management, and risk mitigation.", 
image="/images/band.jpg" } = Astro.props;
---






<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image}>
		<!-- <ViewTransitions /> -->
		<title>{title}</title>

		<!-- Main Stylesheet -->
		<link rel="stylesheet" href="./../styles/styles.css">
		<link rel="stylesheet" href="https://unpkg.com/flowbite@1.4.0/dist/flowbite.min.css">


		<!-- Favicons -->
		<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png">
		<link rel="manifest" href="/assets/favicons/site.webmanifest">

		<!-- FlowBite CSs -->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Dela+Gothic+One&display=swap" rel="stylesheet">

		<!-- Font-awesome CDN -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


		
		
	</head>
	<body class="min-h-screen">
		
		<!-- Side navigation -->
		<Nav />

		<!--  Main Section  -->
		<slot />
	
		<!-- Footer -->
		<Footer />
		</section>

		<!-- Main Js -->
		<script src="/src/js/main.js"></script>

		<!-- Flowbite JS file -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>

	
		
	</body>
</html>




<!-- Style -->
<style>
html {
    --clr-black: #000;
    --clr-dark-gray: #262A2E;
    --clr-light-gray: #E5E9EC;
}

</style>