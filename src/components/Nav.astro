---
import { Image } from "astro:assets";
import Logo from "/src/assets/logo-2.png"
---




<!-- navOverlay -->
<div class="nav-overlay"></div>



<!-- nav-bar -->
<nav class="nav-bar">
    <div class="container wrapper">
        <div class="flex flex-wrap items-center justify-between mx-auto p-4">
            <!-- logo -->
            <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
                <Image src={Logo} alt="Winnard Bansah Logo" class="w-[100px]">
            </a>
    
            <!-- Buttons -->
            <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse items-center">
                <!-- Theme Button  -->
                <div id="theme-toggle-wrapper">
                    <div>
                      <input type="checkbox" class="theme-toggle-checkbox" id="chk">
                      <label id="theme-toggle-label" for="chk">
                        <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="icon-tabler icon-tabler-sun" width="15px" height="15px" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                          <circle cx="12" cy="12" r="4"></circle>
                          <path d="M3 12h1m8 -9v1m8 8h1m-9 8v1m-6.4 -15.4l.7 .7m12.1 -.7l-.7 .7m0 11.4l.7 .7m-12.1 -.7l-.7 .7"></path>
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="icon-tabler icon-tabler-moon" width="15" height="15" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                          <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"></path>
                        </svg>
                        <div id="theme-toggle-ball">
                          <span class="sr-only">Use dark theme</span>
                        </div>
                      </label>
                    </div>
                  </div>
    
                <!-- Menu Button -->
                <div class="nav-btn">
                    <div class="lines"></div>
                    <div class="lines"></div>
                    <div class="lines"></div>
                </div>
            </div>
    
    
            <!-- Nav Menu -->
            <ul class="nav-list" id="navbar-sticky">
                <li class="nav-item">
                    <a href="#" class="nav-link" aria-current="page">Home</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">About</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Services</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Contact</a>
                </li>
            </ul>
        </div>
    </div>
  </nav>
  















<style lang="scss">



// ============= Nav-Overlay ================
.nav-overlay {
        width: 100%;
        height: 100vh;
        background-color: rgba(255, 255, 255, .1);
        position: fixed;
        z-index: 10;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        pointer-events: none;
        opacity: 0;
        backdrop-filter: blur(10px);

        &.show {
            opacity: 1;
            pointer-events: initial;

        }
    }


.nav-bar {
    background: linear-gradient( to bottom, #002035, #002035);
    width: 100%;
    position: relative;



    // ============== Theme Toggler ==============
    #theme-toggle-wrapper {
        position: relative;
        display: inline-block;
        margin-right: 1rem;

        .theme-toggle-checkbox {
            opacity: 0;
            position: absolute;
        }

        .theme-toggle-checkbox:checked + #theme-toggle-label #theme-toggle-ball {
            transform: translateX(28.5px);
        }

        #theme-toggle-label {
            background-color: transparent;
            border-radius: 50px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 7.5px;
            position: relative;
            width: 66px;
            height: 30px;
            transform: scale(1.2);
            box-shadow: 0 0 0 1px rgb(var(--clr-gray-light));
            outline: 1px solid transparent;

            #theme-toggle-ball {
                background-color: blue;
                border-radius: 50%;
                position: absolute;
                height: 30px;
                width: 30px;
                transform: translateX(-7.5px);
                transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1) 0ms;
            }
            
        }

        .icon-tabler {
            transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1) 0ms;
            z-index: 10;
        }


        .sr-only {
            border: 0 !important;
            clip: rect(1px, 1px, 1px, 1px) !important;
            -webkit-clip-path: inset(50%) !important;
            clip-path: inset(50%) !important;
            height: 1px !important;
            margin: -1px !important;
            overflow: hidden !important;
            padding: 0 !important;
            position: absolute !important;
            width: 1px !important;
            white-space: nowrap !important;
        }

        .icon-tabler-sun {
            color: rgb(var(--clr-gray-light));
        }
        .icon-tabler-moon {
            color: rgb(var(--clr-gray-light));
        }
    }


    // ============= Nav Button  =================
    .nav-btn {
        // position: fixed;
        // top: 20px;
        // right: 20px;
        z-index: 21;
        cursor: pointer;

        .lines {
            width: 1.7rem;
            height: .1rem;
            background-color: rgb(var(--clr-gray-light));

            &:not(:last-child) {
                margin-bottom: .5rem;
            }
        }
    }
}






// desktops
@media screen and (min-width: 768px) {

    .nav-bar {
        padding-top: 10px;
    }

    .nav-btn {
        display: none;
    }

    // ====================== Nav List ================
    .nav-list {
        display: flex;
        padding: 1rem 3rem;
        border-radius: 3rem;
        backdrop-filter: blur(90px);
        border: 1px solid rgba(255, 255, 255, .1);
        position: fixed;
        position: -webkit-sticky;
        top: 10px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10;
        transition: .4s;

        .nav-item {

            &:not(:last-child) {

                .nav-link {
                    border-right: 1px solid rgba(255, 255, 255, .1);
                }
            }
        }

        .nav-link {
            display: inline-block;
            color: rgb(var(--clr-white));
            padding: 0rem 2rem;
            font-size: .9rem;

            &:hover,
            &:focus {
                color: rgb(var(--clr-blue))
            }
        }
    }




    
}



// Mobile devices
@media screen and (max-width: 767px) {


    .nav-bar {
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, .1);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 20;

        .nav-list {
            width: 100%;
            transition: .4s;
            background-color: rgb(var(--clr-black));
            position: fixed;
            top: 0;
            left: 0;
            z-index: 10;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 50vh;
            transform: translate3d(0, -110%, 0);

            &.show {
                transform: translate3d(0, 00%, 0);
            }

            .nav-item {

                &:not(:last-child) {
                    margin-bottom: .3rem;
                }
            }

            .nav-link {
                display: inline-block;
                padding: .5rem 2rem;
                font-size: 1.2rem;
                border-radius: .5rem;
                border: 1px solid transparent;
                color: rgb(var(--clr-white));

                &:hover {
                    border: 1px solid rgb(var(--clr-blue));
                    color: rgb(var(--clr-blue));
                }
            }
        }
    }
}
</style>